{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "../dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  },
  "exclude": [
    "node_modules",
    "environments",
    "**/*.spec.ts",
    "test.ts"
  ]
}
